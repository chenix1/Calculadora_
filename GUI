    private void btIgualActionPerformed(java.awt.event.ActionEvent evt) {                                        
        String cadena = Resultado.getText();
    
    // Verificamos si los paréntesis y los decimales son válidos
    if (Funcionalidad.revisaParent(cadena) && Funcionalidad.decimalesValidos(cadena)) {
        // Tokenizamos la expresión
        String[] tokens = Funcionalidad.obtieneTokens(cadena);
        
        // Convertimos a notación postfija
        String[] postfija = Funcionalidad.conviertePostfija(tokens);
        
        // Evaluamos la expresión en notación postfija
        double resultado = Funcionalidad.evalua(postfija);
        
        // Mostramos el resultado
        Resultado.setText(String.valueOf(resultado));
    } else {
        // Si los paréntesis o decimales no son válidos, mostramos un error
        Resultado.setText("Error de sintaxis");
    }
    }                                       

    private void ResultadoActionPerformed(java.awt.event.ActionEvent evt) {                                          

    }                                         

    private void jbBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                         
