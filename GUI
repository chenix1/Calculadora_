    }                                        

    private void jbBorrarUnoActionPerformed(java.awt.event.ActionEvent evt) {                                            
        int n;
        n=Resultado.getText().length();
        
        if(n>0){
            Resultado.setText(Resultado.getText().substring(0, n-1));    
        }
    }                                           

